---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection } from 'astro:content';

// Get all blog posts
const allPosts = await getCollection('docs', (entry) => 
  entry.slug && entry.slug.startsWith('blog/day-')
);

// Group posts by day
const postsByDay = new Map();

allPosts.forEach(post => {
  const dayMatch = post.slug.match(/day-(\d+)/);
  if (dayMatch) {
    const day = parseInt(dayMatch[1]);
    if (!postsByDay.has(day)) {
      postsByDay.set(day, { human: null, claude: null });
    }
    
    if (post.data.authors?.includes('human')) {
      postsByDay.get(day).human = post;
    } else if (post.data.authors?.includes('claude')) {
      postsByDay.get(day).claude = post;
    }
  }
});

// Sort days in descending order
const sortedDays = Array.from(postsByDay.keys()).sort((a, b) => b - a);
---

<StarlightPage frontmatter={{ title: "Development Blog", description: "Two perspectives on building a database - human curiosity meets AI implementation" }}>
  <div class="blog-index">
    <header class="blog-header">
      <h1>üß† Two Minds, One Database</h1>
      <p class="blog-subtitle">
        Follow our unique collaboration as a CRUD developer and Claude AI build a database from scratch. 
        Experience both perspectives: human learning through questions and AI insights through patterns.
      </p>
      
      <div class="value-props">
        <div class="value-prop">
          <span class="prop-icon">üë®‚Äçüíª</span>
          <div>
            <h3>Human Perspective</h3>
            <p>Real learning journey through code review and questioning</p>
          </div>
        </div>
        <div class="value-prop">
          <span class="prop-icon">ü§ñ</span>
          <div>
            <h3>AI Perspective</h3>
            <p>Pattern recognition and collaboration analysis</p>
          </div>
        </div>
        <div class="value-prop">
          <span class="prop-icon">ü§ù</span>
          <div>
            <h3>Collaboration Insights</h3>
            <p>See how human-AI partnership creates better outcomes</p>
          </div>
        </div>
      </div>
    </header>

    <div class="reading-modes">
      <h2>Choose Your Reading Experience</h2>
      <div class="mode-cards">
        <div class="mode-card">
          <span class="mode-icon">üìÖ</span>
          <h3>Day by Day</h3>
          <p>Follow our journey chronologically, day by day</p>
        </div>
        <div class="mode-card">
          <span class="mode-icon">üë•</span>
          <h3>By Perspective</h3>
          <p>Read all human or all AI posts together</p>
        </div>
        <div class="mode-card">
          <span class="mode-icon">üìä</span>
          <h3>Side by Side</h3>
          <p>Compare both perspectives simultaneously</p>
        </div>
      </div>
    </div>

    <div class="posts-timeline">
      <h2>Development Timeline</h2>
      
      {sortedDays.map(day => {
        const posts = postsByDay.get(day);
        const humanPost = posts.human;
        const claudePost = posts.claude;
        
        return (
          <div class="day-section">
            <div class="day-header">
              <h3>Day {day}</h3>
              <div class="day-actions">
                {humanPost && claudePost && (
                  <a href={`/blog/day-${day}/both/`} class="dual-view-btn">
                    üìä Both Views
                  </a>
                )}
              </div>
            </div>
            
            <div class="day-posts">
              {humanPost && (
                <article class="post-card human-post">
                  <div class="post-header">
                    <div class="post-meta">
                      <span class="perspective-badge human">üë®‚Äçüíª Human</span>
                      <time>{new Date(humanPost.data.date).toLocaleDateString()}</time>
                    </div>
                    <div class="post-actions">
                      <a href={`/blog/${humanPost.slug.replace('blog/', '')}/`} class="read-btn">Read ‚Üí</a>
                    </div>
                  </div>
                  
                  <h4>{humanPost.data.title}</h4>
                  <p class="post-excerpt">{humanPost.data.excerpt}</p>
                  
                  {humanPost.data.insights && (
                    <div class="post-metrics">
                      {humanPost.data.insights.questionsAsked && (
                        <span class="metric">‚ùì {humanPost.data.insights.questionsAsked} questions</span>
                      )}
                      {humanPost.data.insights.iterations && (
                        <span class="metric">üîÑ {humanPost.data.insights.iterations} iterations</span>
                      )}
                      {humanPost.data.insights.breakthroughMoment && (
                        <span class="metric breakthrough">üí° "{humanPost.data.insights.breakthroughMoment}"</span>
                      )}
                    </div>
                  )}
                </article>
              )}
              
              {claudePost && (
                <article class="post-card claude-post">
                  <div class="post-header">
                    <div class="post-meta">
                      <span class="perspective-badge claude">ü§ñ Claude</span>
                      <time>{new Date(claudePost.data.date).toLocaleDateString()}</time>
                    </div>
                    <div class="post-actions">
                      <a href={`/blog/${claudePost.slug.replace('blog/', '')}/`} class="read-btn">Read ‚Üí</a>
                    </div>
                  </div>
                  
                  <h4>{claudePost.data.title}</h4>
                  <p class="post-excerpt">{claudePost.data.excerpt}</p>
                  
                  {claudePost.data.insights && (
                    <div class="post-metrics">
                      {claudePost.data.insights.filesModified && (
                        <span class="metric">üìÅ {claudePost.data.insights.filesModified} files</span>
                      )}
                      {claudePost.data.insights.patternsObserved && (
                        <span class="metric">üîç {claudePost.data.insights.patternsObserved.length} patterns</span>
                      )}
                      {claudePost.data.insights.keyLearning && (
                        <span class="metric breakthrough">üéØ "{claudePost.data.insights.keyLearning}"</span>
                      )}
                    </div>
                  )}
                </article>
              )}
            </div>
            
            {!humanPost && claudePost && (
              <div class="missing-perspective">
                <span class="missing-badge">üë®‚Äçüíª Human perspective coming soon...</span>
              </div>
            )}
            
            {humanPost && !claudePost && (
              <div class="missing-perspective">
                <span class="missing-badge">ü§ñ Claude perspective coming soon...</span>
              </div>
            )}
          </div>
        );
      })}
    </div>

    <div class="blog-footer">
      <div class="footer-cta">
        <h3>Join Our Journey</h3>
        <p>This is a living experiment in human-AI collaboration. Follow along as we discover new patterns and push the boundaries of collaborative development.</p>
        <div class="footer-links">
          <a href="/blog/authors/human/" class="footer-link">üë®‚Äçüíª All Human Posts</a>
          <a href="/blog/authors/claude/" class="footer-link">ü§ñ All Claude Posts</a>
          <a href="/tutorials/" class="footer-link">üìö Learn with Us</a>
        </div>
      </div>
    </div>
  </div>
</StarlightPage>

