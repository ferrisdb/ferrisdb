---
import { Card, CardGrid, Aside } from '@astrojs/starlight/components';

interface Props {
  humanPost: any;
  claudePost: any;
  day: number;
}

const { humanPost, claudePost, day } = Astro.props;
---

<div class="dual-view">
  <h1>Day {day}: Dual Perspective</h1>
  <p>Compare human curiosity and AI implementation side-by-side</p>
  
  <Aside type="tip">
    Read both perspectives to see how human questions and AI insights combine to drive our database development forward.
  </Aside>
  
  <CardGrid>
    <Card title="ğŸ‘¨â€ğŸ’» Human Perspective" icon="user">
      <h3>{humanPost.data.title}</h3>
      <p>{humanPost.data.excerpt}</p>
      
      {humanPost.data.insights && (
        <div class="insights">
          {humanPost.data.insights.questionsAsked && (
            <p><strong>â“ Questions Asked:</strong> {humanPost.data.insights.questionsAsked}</p>
          )}
          {humanPost.data.insights.iterations && (
            <p><strong>ğŸ”„ Iterations:</strong> {humanPost.data.insights.iterations}</p>
          )}
          {humanPost.data.insights.breakthroughMoment && (
            <p><strong>ğŸ’¡ Breakthrough:</strong> "{humanPost.data.insights.breakthroughMoment}"</p>
          )}
        </div>
      )}
      
      <p><a href={`/blog/${humanPost.id.replace('blog/', '')}/`}>Read Full Human Post â†’</a></p>
    </Card>
    
    <Card title="ğŸ¤– Claude Perspective" icon="rocket">
      <h3>{claudePost.data.title}</h3>
      <p>{claudePost.data.excerpt}</p>
      
      {claudePost.data.insights && (
        <div class="insights">
          {claudePost.data.insights.filesModified && (
            <p><strong>ğŸ“ Files Modified:</strong> {claudePost.data.insights.filesModified}</p>
          )}
          {claudePost.data.insights.patternsObserved && (
            <p><strong>ğŸ” Patterns Observed:</strong> {claudePost.data.insights.patternsObserved.length}</p>
          )}
          {claudePost.data.insights.keyLearning && (
            <p><strong>ğŸ¯ Key Learning:</strong> "{claudePost.data.insights.keyLearning}"</p>
          )}
        </div>
      )}
      
      <p><a href={`/blog/${claudePost.id.replace('blog/', '')}/`}>Read Full Claude Post â†’</a></p>
    </Card>
  </CardGrid>

  <Aside type="note" title="Collaboration Highlights">
    Day {day} showcased {humanPost.data.insights?.questionsAsked || 0} questions, 
    {humanPost.data.insights?.iterations || claudePost.data.insights?.filesModified || 0} iterations, 
    and {claudePost.data.insights?.patternsObserved?.length || 0} collaboration patterns.
  </Aside>
  
  <div class="navigation">
    <p>
      {day > 1 && (
        <a href={`/blog/day-${day - 1}/both/`}>â† Day {day - 1}</a>
      )}
      {day > 1 && ' | '}
      <a href="/blog/">All Posts</a>
      | <span style="opacity: 0.5;">Day {day + 1} â†’</span>
    </p>
  </div>
</div>

<style>
  .dual-view {
    max-width: 1200px;
    margin: 0 auto;
  }

  .dual-view h1 {
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .dual-view > p {
    text-align: center;
    color: var(--sl-color-text-accent);
    margin-bottom: 2rem;
  }

  .insights {
    margin: 1rem 0;
  }

  .insights p {
    margin: 0.5rem 0;
    font-size: 0.9rem;
  }

  .navigation {
    text-align: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--sl-color-hairline);
  }

  .navigation p {
    margin: 0;
  }

  .navigation a {
    color: var(--sl-color-accent);
    text-decoration: none;
    font-weight: 500;
  }

  .navigation a:hover {
    text-decoration: underline;
  }
</style>