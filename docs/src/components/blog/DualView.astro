---
interface Props {
  humanPost: any;
  claudePost: any;
  day: number;
}

const { humanPost, claudePost, day } = Astro.props;
---

<div class="dual-view">
  <div class="dual-view-header">
    <h1>Day {day}: Dual Perspective</h1>
    <p>Read both perspectives side-by-side to see how human curiosity and AI implementation work together.</p>
  </div>
  
  <div class="perspective-columns">
    <article class="perspective-column human-column">
      <header class="column-header">
        <div class="perspective-info">
          <span class="perspective-icon">üë®‚Äçüíª</span>
          <div>
            <h2>Human Perspective</h2>
            <p>Learning through questions and review</p>
          </div>
        </div>
        <a href={`/blog/${humanPost.slug}/`} class="read-full">Read Full Post ‚Üí</a>
      </header>
      
      <div class="post-content">
        <h3>{humanPost.data.title}</h3>
        <div class="post-excerpt">
          {humanPost.data.excerpt}
        </div>
        
        {humanPost.data.insights && (
          <div class="quick-metrics">
            {humanPost.data.insights.questionsAsked && (
              <span class="metric">‚ùì {humanPost.data.insights.questionsAsked} questions</span>
            )}
            {humanPost.data.insights.breakthroughMoment && (
              <span class="metric">üí° "{humanPost.data.insights.breakthroughMoment}"</span>
            )}
          </div>
        )}
      </div>
    </article>
    
    <article class="perspective-column claude-column">
      <header class="column-header">
        <div class="perspective-info">
          <span class="perspective-icon">ü§ñ</span>
          <div>
            <h2>Claude Perspective</h2>
            <p>Pattern analysis and implementation insights</p>
          </div>
        </div>
        <a href={`/blog/${claudePost.slug}/`} class="read-full">Read Full Post ‚Üí</a>
      </header>
      
      <div class="post-content">
        <h3>{claudePost.data.title}</h3>
        <div class="post-excerpt">
          {claudePost.data.excerpt}
        </div>
        
        {claudePost.data.insights && (
          <div class="quick-metrics">
            {claudePost.data.insights.filesModified && (
              <span class="metric">üìÅ {claudePost.data.insights.filesModified} files modified</span>
            )}
            {claudePost.data.insights.keyLearning && (
              <span class="metric">üéØ "{claudePost.data.insights.keyLearning}"</span>
            )}
          </div>
        )}
      </div>
    </article>
  </div>
  
  <div class="collaboration-summary">
    <h3>ü§ù Collaboration Summary</h3>
    <div class="summary-grid">
      <div class="summary-item">
        <span class="summary-label">Focus</span>
        <span class="summary-value">
          {humanPost.data.tags?.filter((tag: string) => !['human-perspective', 'ai-perspective'].includes(tag))?.slice(0, 3)?.join(', ') || 'Development'}
        </span>
      </div>
      <div class="summary-item">
        <span class="summary-label">Outcome</span>
        <span class="summary-value">Enhanced FerrisDB capabilities</span>
      </div>
    </div>
  </div>
  
  <div class="navigation-footer">
    <div class="nav-links">
      {day > 1 && (
        <a href={`/blog/day-${day - 1}/both/`} class="nav-link prev">
          ‚Üê Day {day - 1}
        </a>
      )}
      <a href="/blog/" class="nav-link all">All Posts</a>
      <a href={`/blog/day-${day + 1}/both/`} class="nav-link next disabled">
        Day {day + 1} ‚Üí
      </a>
    </div>
  </div>
</div>

<style>
  .dual-view {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .dual-view-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .dual-view-header h1 {
    margin: 0 0 0.5rem 0;
    color: var(--sl-color-text);
  }

  .dual-view-header p {
    color: var(--sl-color-text-accent);
    font-size: 1.1rem;
    margin: 0;
  }

  .perspective-columns {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .perspective-column {
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-hairline);
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .column-header {
    padding: 1.5rem;
    background: var(--sl-color-bg-sidebar);
    border-bottom: 1px solid var(--sl-color-hairline);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .perspective-info {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .perspective-icon {
    font-size: 2rem;
  }

  .perspective-info h2 {
    margin: 0 0 0.25rem 0;
    font-size: 1.2rem;
    color: var(--sl-color-text);
  }

  .perspective-info p {
    margin: 0;
    color: var(--sl-color-text-accent);
    font-size: 0.9rem;
  }

  .read-full {
    color: var(--sl-color-accent);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
  }

  .read-full:hover {
    text-decoration: underline;
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-content h3 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    color: var(--sl-color-text);
  }

  .post-excerpt {
    color: var(--sl-color-text-accent);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .quick-metrics {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .metric {
    font-size: 0.8rem;
    color: var(--sl-color-text-accent);
    background: var(--sl-color-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    border: 1px solid var(--sl-color-hairline);
    width: fit-content;
  }

  .collaboration-summary {
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-hairline);
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .collaboration-summary h3 {
    margin: 0 0 1rem 0;
    color: var(--sl-color-text-accent);
  }

  .summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .summary-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .summary-label {
    font-size: 0.8rem;
    color: var(--sl-color-text-accent);
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .summary-value {
    color: var(--sl-color-text);
    font-weight: 500;
  }

  .navigation-footer {
    border-top: 1px solid var(--sl-color-hairline);
    padding-top: 2rem;
  }

  .nav-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-link {
    color: var(--sl-color-accent);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    border: 1px solid var(--sl-color-accent);
  }

  .nav-link:hover:not(.disabled) {
    background: var(--sl-color-accent-low);
  }

  .nav-link.disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @media (max-width: 768px) {
    .perspective-columns {
      grid-template-columns: 1fr;
    }

    .column-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .nav-links {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>